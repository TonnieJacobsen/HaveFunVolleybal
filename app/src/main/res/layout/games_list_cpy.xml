<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for weather forecast list item for future day (not today) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/game_listitem_speeldag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vrijdag"
        />

    <TextView
        android:id="@+id/game_listitem_speeldatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    12-02-2015"/>


    <TextView
        android:id="@+id/game_listitem_speeltijd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    20:15"/>



</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
        <TextView
            android:id="@+id/game_listitem_team1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team 1"
            />

         <TextView
            android:id="@+id/game_listitem_team1_total_set_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set stand"
            />

            <TextView
                android:id="@+id/game_listitem_team1_total_game_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game points"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/game_listitem_team2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team 2"
                />

            <TextView
                android:id="@+id/game_listitem_team2_total_set_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set stand"
                />


            <TextView
                android:id="@+id/game_listitem_team2_total_game_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game points"
                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>